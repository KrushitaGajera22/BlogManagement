<%- include('../layouts/admin-header.ejs') %>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
        <h2 class="mb-4">View Post</h2>

        <div class="container">
            <form method="POST" id="viewPost">
                <div class="row">
                    <div class="col-sm-12">
                        <h5>Title : </h5>
                        <p><%= post.title%></p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-sm-12">
                        <!-- Button trigger modal -->
                        <h5>Image : </h5>
                        <p><img src="<%= post.image %>" alt="<%= post.image %>" class="image"></p>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-sm-12">
                        <h5>Content : </h5>
                        <p><%= post.content%></p>
                    </div>
                </div>
            </form>
        </div>
        <p style="color: green; margin-top: 10px; " class="status"></p>
    </div>


 <%- include('../layouts/admin-footer.ejs') %>